.modal-bind{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  background-color: rgba(0,0,0,0.5);
}
.bind-content{
  background-color: white;
  position: absolute;
  bottom: 0;
  width: 100%;
}
.bind-item{
  padding: 0.7rem 0;
  text-align: center;
}
.color-one{
  color: rgba(155,155,155,1)
}
.line-two{
  height: .5rem;
  background-color: #f4f4f4;
}
.border-bottom{
    border-bottom: 0.01rem solid rgba(215, 215, 215, 1);
}