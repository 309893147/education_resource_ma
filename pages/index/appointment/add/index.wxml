<view class='font-size-four h-padding-two bg-white' bindtap='selectType'>
  <view class='flex-row align-center flex-between v-padding'>
    <view>预约类型</view>
    <view class='flex-row align-center'>
      <text>{{service.type}}</text>
      <image class='icon arrow' src="/r/arrow_right.png"></image>
    </view>
  </view>
  <view class='border-bottom'></view>
</view>
<view class='font-size-four h-padding-two bg-white' bindtap='openShowTime'>
  <view class='flex-row align-center flex-between v-padding'>
    <view>预约时间</view>
    <view class='flex-row align-center'>
      <text>{{service.selectTime}}</text>
      <image class='icon arrow' src="/r/arrow_right.png"></image>
    </view>
  </view>
  <view class='border-bottom'></view>
</view>
<view style='height:1rem' class='bg-white'></view>
<view class=' font-size-four h-padding-two bg-white'>
  <view>备注</view>
  <view class='mt-top relative ramark'>
    <textarea placeholder='请输入' bindinput='getValue' placeholder-class='place' maxlength='200'></textarea>
    <view class='posi-textarea place'>{{length}}/{{sum}}</view>
  </view>
</view>
<view class='s-padding hint-text wrap'>
