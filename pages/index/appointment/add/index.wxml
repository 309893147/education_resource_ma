</view>


<view class='modal-time' catchtap='closeShowTime' wx:if="{{showTime}}">
  <view class='time-content' catchtap='openShowTime'>
    <view class='font-size-four flex-row s-padding-two align-center flex-between'>
      <view>选择日期</view>
      <image class='arrow icon radius-round close' catchtap='closeShowTime' src='/r/add_button.png'></image>
    </view>
    <view class=' flex-row '>
      <text wx:for="{{days}}" class='text-center {{item==currentDays?"color-primary":""}}' style='width:14.28%;'>{{item}}</text>
    </view>
    <view>
      <view class='text-center v-padding flex-row flex-center align-center'>
        <image class='icon arrow icon-right ' style="  transform: rotate(180deg);" catchtap='changeMonth' data-type="less" src='/r/arrow_right.png'></image>
        <view class='icon-right'>{{currentYear}}年-{{currentMonth}}月</view>
        <image class='icon arrow ' catchtap='changeMonth' data-type="add" src='/r/arrow_right.png'></image>
      </view>
    </view>
    <view class='date-array flex-row flex-wrap '>
      <view wx:for="{{dates}}" style='width:14.28%;margin-top:.5rem;' class='text-center {{currentYear==toDay.year&&currentMonth==toDay.month &&item==toDay.date?"color-today":currentDate == item?"color-primary":""}}' catchtap='selectDate' data-value="{{item}}">
        {{item}}
      </view>
    </view>
    <view style='height:5.5rem;'></view>
    <bottom>
      <button class='color-white bg-primary radius-no' catchtap='confrimTime'>完成</button>
    </bottom>
  </view>
</view>









<bottom>
  <button class='color-white bg-primary radius-no' bindtap='submit'>提交</button>
</bottom>