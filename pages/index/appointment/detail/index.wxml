<!--pages/index/appointment/detail/index.wxml-->
<view class='bg-white s-margin s-padding box-s'>
  <view class='flex-row mt-top flex-between align-center'>
    <view class='icon-right'>预约类型</view>
    <view class='flex-one word-wrap text-right color-one'>{{detail.DeskTitle}}</view>
  </view>
  <view class='flex-row mt-top  flex-between align-center'>
    <view class='icon-right'>预约时间</view>
    <view class='flex-one word-wrap text-right color-one'>{{detail.CreateDate}}</view>
  </view>
  <view class='flex-row mt-top  flex-between '>
    <view class='icon-right' style='width:3rem;'>备注</view>
    <view class='flex-one word-wrap text-right color-one'>{{detail.Title}}</view>
  </view>
</view>
<view class='bg-white s-margin s-padding'>
  <view class='flex-row  flex-between '>
    <view class='icon-right'>预约状态</view>
    <view class='flex-one word-wrap text-right color-primary'>
      <text wx:if="{{detail.StatusFlg==0}}">待处理</text>
      <text wx:if="{{detail.StatusFlg==1}}">处理中</text>
      <text wx:if="{{detail.StatusFlg==2}}">已处理</text>
      <text wx:if="{{detail.StatusFlg==3}}">已取消</text>
      <text wx:if="{{detail.StatusFlg==4}}">已关闭</text>
    </view>
  </view>
  <view class='flex-row flex-between mt-top' wx:if="{{detail.StatusFlg==4}}">
  <view class='icon-right'>关闭说明</view>
  <view class='hint-text wrap text-right'>{{detail.QrTitle}}</view>
  </view>
</view>
<block wx:if="{{detail.StatusFlg==0}}">
  <bottom>
    <button class='color-white radius-no bg-primary' bindtap='cancel'>取消预约</button>
  </bottom>
  </block>