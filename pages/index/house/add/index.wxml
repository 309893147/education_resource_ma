    <view>房屋大小</view>
    <input class='flex-one text-right font-size-four' placeholder='请输入' value="{{data.area}}" placeholder-class='place' data-key='area' bindinput='getValue'></input>
  </view>
  <view class='line'></view>
</view>
<view class='h-padding' wx:if="{{data.addType === 0}}">
  <view class='v-padding flex-row align-center font-size-four'>
    <view>预期售价</view>
    <input class='flex-one text-right font-size-four' placeholder='请输入' value="{{houseInfo.price}}" placeholder-class='place' data-key='price' bindinput='getValue'></input>
  </view>
  <view class='line'></view>
</view>
<view class='h-padding' wx:if="{{data.addType === 1}}">
  <view class='v-padding flex-row align-center font-size-four'>
    <view>预期租金</view>
    <input class='flex-one text-right font-size-four' placeholder='请输入' value="{{houseInfo.price}}" placeholder-class='place' data-key='price' bindinput='getValue'></input>
  </view>
  <view class='line'></view>
</view>
