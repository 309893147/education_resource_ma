    <input class='flex-one text-right font-size-four' placeholder='请输入' placeholder-class='place' value="{{data.tel}}" data-key='tel' bindinput='getValue' type='number'></input>
  </view>
  <view class='line'></view>
</view>
<view class='h-padding'>
