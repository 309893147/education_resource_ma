/* pages/index/services/index.wxss */

.header{
  height: 11.625rem;
}
.header image{
  height: 100%;
  width: 100%;
}
.call-icon{
  height: 0.875rem;
  width: .875rem;
  margin-right: .56rem;
}
.call-wrapper{
  border: solid .1px #4DAB6C;
  color: #4DAB6C;
  padding: .375rem 2.5rem;
  background: white;
  transform: translateY(-50%); 
}
.col-3{
  width: 33.33%;
  box-sizing: border-box;
}
.item{
  margin-bottom: 2.83rem;
  padding: .4rem;
}
.want{
  transform: translateY(-50%);
  padding: .375rem 1.125rem;
  display: inline-block;
}
.box{
  box-shadow:0px 2px 4px rgba(0,0,0,0.1);
  padding:.625rem .6rem  2.5625rem .6rem;
  border:0px solid rgba(210,232,217,1);
  border-radius:5px;

}

.grey{
  background: #ccc;
}