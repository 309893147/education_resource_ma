/* pages/mine/index.wxss */

.service-icon {
  width: 1.5625rem;
  height: 1.5625rem;
  margin-bottom: 0.3125rem;
}

.card {
  border: 0px solid rgba(244, 244, 244, 1);
  box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.05);
  padding: 1.25rem 0.6rem;
  margin-bottom: 1.4rem;
  margin-top: 1.4rem;
}

.nick {
  font-size: 1.125rem;
}

.avatar {
  height: 3.75rem;
  width: 3.75rem;
  margin: 0.9375rem;
  border-radius: 50%;
    box-sizing: border-box;
  padding: 0.05rem;
  background: linear-gradient(to left, rgba(219, 238, 225, 1) 0%, rgba(77, 171, 108, 1) 100%);
}

.avatar-white {
  width: 100%;
  height: 100%;
  padding: 0.2rem;
  box-sizing: border-box;
  border-radius: 50%;
  background: white;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.indicator {
  background: #4dab6c;
  border-radius: 50%;
  color: white;
  font-size: 0.875rem;
  height: 2.5rem;
  width: 2.5rem;
  line-height: 2.5rem;
  text-align: center;
}

.right-space {
  margin-right: 0.375rem;
}

.cert {
  border-radius: 0.4rem 0px 0.4rem 0px;
  padding: 0.1rem 0.25rem;
  font-size: 0.5rem;
  margin: 0 0.3rem;
 
}
