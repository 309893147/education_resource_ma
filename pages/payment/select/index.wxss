.payment{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}
.scroll{
  height: calc(100% - 3rem);
}
.search{
  height: 3rem;
}
.menuSelect{
  position: absolute;
  top: 3rem;
  right: .5rem;
}
.scroll-item-text{
  width: calc(100% - 2rem)
}
.menuSelect .item{
  /* background-color: black;   */
  width: 2rem;
  height: 1rem;
  text-align: center;
}